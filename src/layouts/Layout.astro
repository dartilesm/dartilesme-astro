---
import Header from "../components/Header.astro";
import logo from "../assets/logo.webp";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content="Senior Frontend Developer with proven expertise in React, Next.js, Vue and Angular. Delivering high-impact web applications with exceptional UX through clean code, interactive animations and performance optimization. Let's build something amazing together."
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/webp' href={logo.src} />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='bg-slate-100 dark:bg-slate-950 text-slate-900 dark:text-slate-50 transition-colors overflow-x-hidden'
  >
    <div
      class='absolute top-0 -z-10 h-screen w-screen bg-slate-100 dark:bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]'
    >
    </div>
    <Header />
    <main class='max-w-5xl mx-auto px-4 py-8 pt-20'>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
